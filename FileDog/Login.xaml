<Page x:Class="FileDog.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileDog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="234*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="308*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Image Source="Resources/Login.png" Margin="0,0,0,-0.4" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
        <PasswordBox x:Name="PassBox" Grid.Row="1" Grid.Column="1" FontSize="50" MaxLength="10" Background="White" PasswordChanged="EnterPassword"/>

    </Grid>
</Page>
