<Page x:Class="FileDog.Options.Paths"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileDog.Options"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Paths">

    <Grid Background="SkyBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="Panel"/>
        </ScrollViewer>

        <Label Content="Добавить" Grid.Row="1" Foreground="White" FontSize="19" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" MouseDown="AddPath"/>
    </Grid>
</Page>
